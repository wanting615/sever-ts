{
  "name": "elm-server",
  "version": "1.0.0",
  "description": "使用koa、mongodb、typesctipt搭建node服务端",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon  --watch src -e ts,tsx --exec ts-node src/server.ts",
    "build-ts": "tsc",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/server.js",
    "build": "npm run build-ts && npm run copy-static-assets",
    "start": "npm run serve",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prd-first": "pm2 deploy ecosystem.config.js production setup",
    "prd-update": "pm2 deploy ecosystem.config.js production",
    "pm2": "pm2 start ./dist/src/server.js"
  },
  "author": "wanting",
  "license": "ISC",
  "engines": {
    "node": "14.x.x",
    "npm": "6.x.x"
  },
  "devDependencies": {
    "@types/cron": "^1.7.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/koa": "2.13.1",
    "@types/koa-helmet": "^6.0.2",
    "@types/koa-static": "^4.0.2",
    "@types/koa__cors": "^3.0.2",
    "@types/koa__router": "^8.0.4",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^14.14.37",
    "@types/node-fetch": "^2.6.2",
    "@types/node-rsa": "^1.1.1",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "nodemon": "^2.0.7",
    "shelljs": "^0.8.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.0.0",
    "@typegoose/typegoose": "^8.2.0",
    "@types/koa-json": "^2.0.20",
    "@types/koa-logger": "^3.1.1",
    "class-validator": "^0.13.1",
    "cron": "^1.8.2",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-body": "^4.2.0",
    "koa-helmet": "^6.1.0",
    "koa-json": "^2.0.2",
    "koa-jwt": "^4.0.0",
    "koa-logger": "^3.2.1",
    "koa-onerror": "^4.1.0",
    "koa-static": "^5.0.0",
    "koa-swagger-decorator": "^1.6.4",
    "mongoose": "^5.13.8",
    "node-fetch": "^2.6.7",
    "node-rsa": "^1.1.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.32",
    "winston": "^3.3.3"
  }
}
